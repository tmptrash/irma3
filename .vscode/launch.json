{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'irma4'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=irma4",
                    "--package=irma4"
                ],
                "filter": {
                    "name": "irma4",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceMap": {
                //
                // This line is needed for debugging std library. This id is obtaied
                // from assembler source code during debugging. Details:
                // https://github.com/vadimcn/vscode-lldb/issues/204#issue-484923630
                //
                "/rustc/f1edd0429582dd29cccacaf50fd134b05593bd9c/": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/lib/rustlib/src/rust"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'irma4'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=irma4",
                    "--package=irma4"
                ],
                "filter": {
                    "name": "irma4",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}